<UserControl x:Class="BiosPatcher.Views.TemperatureGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="Canvas" SizeChanged="OnCanvasResize">
            <Rectangle x:Name="Level5Graph" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="800" Fill="#2B32B2"/>
            <Rectangle x:Name="Level4Graph" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="700" Fill="#3A51C1"/>
            <Rectangle x:Name="Level3Graph" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="600" Fill="#4A70D0"/>
            <Rectangle x:Name="Level2Graph" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="500" Fill="#5A90E0"/>
            <Rectangle x:Name="Level1Graph" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="400" Fill="#6AAFEF"/>
            <Rectangle x:Name="Level0Graph" Height="{Binding ElementName=Canvas, Path=ActualHeight}" Width="300" Fill="#7ACFFF"/>
            <Polygon x:Name="Header" Points="0,450, 0,0 800,0" Fill="White"/>
        </Canvas>
        <Label x:Name="DescriptionLabel" FontSize="13" Margin="5"/>
    </Grid>
</UserControl>
